---
import { GoogleFontsOptimizer } from 'astro-google-fonts-optimizer';
import Router from './Router';

const { path } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-slate-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Admin</title>
    <meta name="description" content="Admin CMS for Yale Outdoors" />
    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap" />
  </head>
  <body>
    <Router path={path} client:load />
  </body>
</html>
